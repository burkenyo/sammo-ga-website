{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/**/*", "src/**/*.vue", "test/", "utility-types.d.ts", "env.d.ts", "route-meta.d.ts", "vue-augments.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@main/*": ["./src/main/*"],
      "@shared/*": ["./src/shared/*"],
      "@melodies/*": ["./src/melodies/*"]
    },
    "types": ["vite/client"],
    "target": "ES6",
    "lib": ["ES2019", "DOM"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
